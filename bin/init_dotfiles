#!/bin/bash

GIT_DIR="$HOME/.dotfiles.git"

if [[ -e "$GIT_DIR" ]]; then
    echo "$GIT_DIR already exists"
    exit 1
fi

git clone --bare https://www.github.com/ryancerium/dotfiles.git "$GIT_DIR"
git --git-dir="$GIT_DIR" --work-tree=$HOME config --local status.showUntrackedFiles no
git --git-dir="$GIT_DIR" --work-tree=$HOME checkout

curl https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb \
     --output  ~/Downloads/google-chrome-stable_current_amd64.deb
sudo dpkg --install ~/Downloads/google-chrome-stable_current_amd64.deb

curl https://linux.dropbox.com/packages/ubuntu/dropbox_2019.02.14_amd64.deb \
     --output  ~/Downloads/dropbox_2019.02.14_amd64.deb
sudo dpkg --install ~/Downloads/dropbox_2019.02.14_amd64.deb

curl https://downloads.slack-edge.com/linux_releases/slack-desktop-4.3.2-amd64.deb \
     --output  ~/Downloads/slack-desktop-4.3.2-amd64.deb
sudo dpkg --install ~/Downloads/slack-desktop-4.3.2-amd64.deb

sudo apt install -f
